<div class='text-center'>
    <h1>List of Restaurants</h1>
    <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-outline-primary" %>
</div>
<div class="card" style="width: 30rem;">
   <ul class="list-group list-group-flush">
    <% @restaurants.each do |r|%>
    <li class="list-group-item inline fs-4">
      <%= r.name %> <%= r.address %> 
       <div class="card-link fs-6"> <%= link_to "View", restaurant_path(r) %></div>
    </li>
  <% end %>
